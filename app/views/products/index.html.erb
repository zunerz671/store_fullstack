<div class="max-w-6xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Products</h1>
    <%= link_to "New product", new_product_path, 
        class: "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded font-medium" %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div id="products" class="divide-y divide-gray-200">
      <% @products.each do |product| %>
        <div class="px-6 py-4 hover:bg-gray-50 flex justify-between items-center">
          <div class="text-lg font-medium">
            <%= link_to product.name, product, class: "text-blue-600 hover:text-blue-800" %>
          </div>
          <div class="flex gap-2">
            <%= link_to "Show", product, 
                class: "bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm" %>
            <%= link_to "Edit", edit_product_path(product), 
                class: "bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded text-sm" %>
            <%= button_to "Delete", product, method: :delete, 
                data: { turbo_confirm: "Are you sure?" }, 
                class: "bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>






