<%= form_with(model: product) do |form| %>
  <div class="bg-white rounded-lg shadow-md p-8 max-w-2xl mx-auto">
    <% if product.errors.any? %>
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
        <p class="font-bold mb-2">
          <%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:
        </p>
        <ul class="list-disc list-inside">
          <% product.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-6">
      <%= form.label :name, class: "block text-gray-700 font-semibold mb-2" %>
      <%= form.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="flex gap-3">
      <%= form.submit class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded font-medium cursor-pointer" %>
    </div>
  </div>
<% end %>
